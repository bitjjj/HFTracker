<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="8dp" >
    
    <LinearLayout 
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="vertical">
        
        <TextView
            android:id="@+id/analysis_holding_item_ticker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold" />
	        
        <TextView
            android:id="@+id/analysis_holding_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="#aaa"
            android:textSize="13sp" />

    </LinearLayout>
    

    <TextView
        android:id="@+id/analysis_holding_item_price"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="right"
        android:textSize="13sp"
        android:text="@string/item_placerholder" >

    </TextView>

    <TextView
        android:id="@+id/analysis_holding_item_change_percent"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="right"
        android:text="@string/item_placerholder"
        android:textStyle="bold" >

    </TextView>
    
    <TextView
        android:id="@+id/analysis_holding_item_change"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="right"
        android:text="@string/item_placerholder" >
    </TextView>

    
</LinearLayout>
