<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="12dp" >

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/manager_icon_item_pic"
        android:layout_width="@dimen/manager_selector_list_pic_size"
        android:layout_height="@dimen/manager_selector_list_pic_size"
        android:layout_centerHorizontal="true"
        app:border_color="#FFFFFFFF"
        app:border_width="1dp" />

    <ImageView
        android:id="@+id/manager_icon_item_menu"
        android:layout_width="24dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/manager_icon_item_pic"
        android:layout_toRightOf="@id/manager_icon_item_pic"
        android:src="@drawable/ic_action_overflow_dark" />

    <TextView
        android:id="@+id/manager_icon_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/manager_icon_item_pic"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/manager_icon_item_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:layout_centerHorizontal="true"
        android:layout_marginTop="2dp"
        android:layout_below="@id/manager_icon_item_title" />

</RelativeLayout>