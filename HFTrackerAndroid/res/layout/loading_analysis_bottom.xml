<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/loading_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <ImageView
        android:layout_width="0dp"
        android:layout_height="@dimen/analysis_bottom_bar_tip_icon_height"
        android:layout_gravity="center|left"
        android:layout_weight="1"
        android:src="@drawable/ic_arrow_left" />

	<TextView
	    android:layout_width="0dp"
	    android:layout_height="wrap_content"
	    android:layout_gravity="center"
	    android:layout_weight="2"
	    android:gravity="left"
	    android:text="@string/loading_analysis_select_manager_tip"
	    android:textSize="@dimen/analysis_bottom_bar_tip_font_size" />

	<TextView
	    android:layout_width="0dp"
	    android:layout_height="wrap_content"
	    android:layout_gravity="center"
	    android:layout_weight="2"
	    android:gravity="right"
	    android:text="@string/loading_analysis_select_date_tip"
	    android:textSize="@dimen/analysis_bottom_bar_tip_font_size" />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="@dimen/analysis_bottom_bar_tip_icon_height"
         android:layout_gravity="center|right"
        android:layout_weight="1"
        android:src="@drawable/ic_arrow_right" />

</LinearLayout>