<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="2dp" >

    <TextView
        android:id="@+id/data_loading_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:text="@string/loading_more_data_label"
        android:textSize="16sp" />

    <ProgressBar
        android:id="@+id/data_loading_bar"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_toRightOf="@id/data_loading_text"
        android:layout_marginLeft="20dp"
        android:indeterminateDrawable="@drawable/loading_progress_small_icon"
        android:max="10000"
        android:visibility="gone" />

</RelativeLayout>